<style is:global lang="scss">
  @import "./vars.scss";

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "roboto";
    overflow-x: hidden;
    overflow-y: auto;
    // height: 100svh;
    @media (min-width: $smallScreen) {
      ::-webkit-scrollbar {
        width: 0.5rem;
      }
      ::-webkit-scrollbar-track {
        background: $desktopScrollTrackColor;
      }
      ::-webkit-scrollbar-thumb {
        background: $desktopScrollThumbColor;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
    }
  }
</style>
