---
import Layout from "../layouts/Layout.astro";
import { EMAIL_ADRESS, LINK_LINKEDIN } from "../components/utils/links";
---

<Layout pageName="Contact">
  <div class="component">
    <h2>Contact Me!</h2>
    <p>
      to ensure that your message does not end up in my spam, it is advisable to
      copy the email address and send it yourself instead of using some built-in
      system on the site due to the lack of validation by any email operator.
    </p>
    <p class="email" id="getEmail">
      {EMAIL_ADRESS}
      <img id="clipboard" src="/appIcons/clipboard.svg" alt="" />
    </p>
    <p class="textWithLink">
      or you can contact me via
      <a href={LINK_LINKEDIN}
        ><img src="/techIcons/linked.svg" alt="" />LinkedIn</a
      >
    </p>
  </div>
  <div id="clipped">Copied to clipboard</div>
</Layout>

<script>
  const ANIM_DURR = 2;
  let email = document.getElementById("getEmail")?.innerText;
  document.getElementById("clipboard")?.addEventListener("click", () => {
    navigator.clipboard.writeText(email ?? "");
    const clipped = document.getElementById("clipped");
    if (clipped) {
      clipped.style.animation = `moveUp ${ANIM_DURR}s`;
      setTimeout(() => {
        clipped.style.animation = "";
      }, ANIM_DURR * 1000);
    }
  });
</script>
<style lang="scss">
  @import "../styles/vars.scss";
  @import "../styles/animations.scss";

  .component {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    margin-top: 10rem;
    margin-inline: 10rem;
    transition: $transitionMedium;
    @media (max-width: $midScreen) {
      margin-inline: 5rem;
    }
    @media (max-width: $smallScreen) {
      margin-inline: 1rem;
      margin-top: 2rem;
    }
    h2 {
      color: $secondaryColor;
      font-size: 3rem;
      padding-bottom: 1rem;
      @media (max-width: $midScreen) {
        font-size: 2.5rem;
      }
    }
    p {
      color: $primaryColor;
      font-size: 1.5rem;
      padding-block: 1rem;
      font-weight: 600;
      @media (max-width: $midScreen) {
        font-size: 1.2rem;
      }
    }
    .email {
      color: $secondaryColor;
      position: relative;
      width: fit-content;
      @media (max-width: 300px) {
        padding-left: 2rem;
      }
      @media (max-width: $smallScreen) {
        display: flex;
        flex-grow: 1;
        align-items: center;
      }
    }
    #clipboard {
      position: absolute;
      top: 0;
      right: -2.5rem;
      width: 2rem;
      cursor: pointer;
      filter: brightness(1.2);
      @media (max-width: $smallScreen) {
        top: 50%;
        right: -2rem;
        width: 1.5rem;
        transform: translateY(-75%);
      }
      @media (max-width: 300px) {
        top: 50%;
        left: 0rem;
        transform: translateY(-75%);
      }
    }
    .textWithLink {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      @media (max-width: $smallScreen) {
        flex-direction: column;
        align-items: flex-end;
        flex-grow: 1;
        padding-right: 1rem;
        padding-bottom: 5rem;
      }
      a {
        display: flex;
        align-items: center;
        gap: 0.2rem;
        margin-left: 1rem;
        font-weight: 600;
        text-decoration: none;
        color: $secondaryColor;
        cursor: pointer;
        img {
          width: 2rem;
        }
      }
    }
  }
  #clipped {
    position: fixed;
    bottom: -20%;
    right: 50%;
    color: white;
    font-size: 1.5rem;
    text-align: center;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    background: $appBackground;
    transform: translateX(50%);
    filter: brightness(1.5);
  }
</style>
