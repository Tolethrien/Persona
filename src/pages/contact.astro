---
import Layout from "../layouts/Layout.astro";
import { LINK_LINKEDIN } from "./index.astro";
---

<Layout pageName="Contact">
  <div class="component">
    <h2>Contact Me!</h2>
    <p>
      to ensure that your message does not end up in my spam, it is advisable to
      copy the email address and send it yourself instead of using some built-in
      system on the site due to the lack of validation by any email operator.
    </p>
    <p class="email">
      pawel.grela90@gmail.com
      <img id="clipboard" src="/appIcons/clipboard.svg" />
    </p>
    <p class="textWithLink">
      or you can contact me via
      <a href={LINK_LINKEDIN}><img src="/techIcons/linked.svg" />LinkedIn</a>
    </p>
  </div>
  <div id="clipped">copied to clipboard</div>
</Layout>
<script>
  const ANIM_DURR = 2;
  document.getElementById("clipboard")?.addEventListener("click", () => {
    navigator.clipboard.writeText("suka");
    const clipped = document.getElementById("clipped") as HTMLElement;
    clipped.style.animation = `moveUp ${ANIM_DURR}s`;
    setTimeout(() => {
      clipped.style.animation = "";
    }, ANIM_DURR * 1000);
  });
</script>
<style lang="scss">
  @import "../styles/vars.scss";

  .component {
    margin-top: 10rem;
    margin-inline: 10rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    @media (max-width: $midScreen) {
      margin-inline: 5rem;
    }
    @media (max-width: $smallScreen) {
      margin-inline: 1rem;
      margin-top: 2rem;
    }
    h2 {
      color: $secondaryColor;
      font-size: 3rem;
      padding-bottom: 1rem;
      @media (max-width: $midScreen) {
        font-size: 2.5rem;
      }
    }
    p {
      color: $primaryColor;
      font-size: 1.5rem;
      padding-block: 1rem;
      font-weight: 600;
      @media (max-width: $midScreen) {
        font-size: 1.2rem;
      }
    }
    .email {
      color: $secondaryColor;
      position: relative;
      width: fit-content;
      @media (max-width: 300px) {
        padding-left: 2rem;
      }
      @media (max-width: $smallScreen) {
        display: flex;
        flex-grow: 1;
        align-items: center;
      }
    }
    #clipboard {
      position: absolute;
      top: 0;
      right: -2.5rem;
      width: 2rem;
      cursor: pointer;
      filter: brightness(1.2);
      @media (max-width: $smallScreen) {
        width: 1.5rem;
        right: -2rem;
        top: 50%;
        transform: translateY(-75%);
      }
      @media (max-width: 300px) {
        top: 50%;
        transform: translateY(-75%);
        left: 0rem;
      }
    }
    .textWithLink {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      @media (max-width: $smallScreen) {
        flex-direction: column;
        align-items: flex-end;
        flex-grow: 1;
        padding-right: 1rem;
        padding-bottom: 5rem;
      }

      a {
        margin-left: 1rem;
        display: flex;
        font-weight: 600;
        align-items: center;
        text-decoration: none;
        color: $secondaryColor;
        // border: 1px solid wheat;
        // border-radius: 5px;
        // padding: 0.5rem 1rem;
        gap: 0.2rem;
        cursor: pointer;
        img {
          width: 2rem;
        }
      }
    }
  }
  #clipped {
    position: fixed;
    color: white;
    bottom: -5rem;
    right: 50%;
    font-size: 1.5rem;
    text-align: center;
    transform: translateX(50%);
    background: $appBackground;
    filter: brightness(1.5);
    border-radius: 5px;
    padding: 0.2rem 1rem;
    @keyframes moveUp {
      0% {
        bottom: -5rem;
      }
      50% {
        bottom: 5rem;
      }
      100% {
        bottom: -5rem;
      }
    }
  }
</style>
