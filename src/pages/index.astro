---
import Layout from "../layouts/Layout.astro";
import { LINK_GITHUB, LINK_LINKEDIN } from "../components/utils/links";
---

<Layout pageName="Welcome">
  <div class="content">
    <h2 class="heading">Welcome to my Page</h2>
    <p class="desc">
      i used this page as my personal part of internet to share my stuff with
      the world. You can find here some of my projects, my games or you can read
      about my JS game Engine that am making!
    </p>
    <p class="desc findout">
      ...if you want you can contact me via media bellow.
    </p>
  </div>
  <div class="socialBar">
    <a href={LINK_LINKEDIN} target="_blank" rel="noreferrer noopener">
      <img class="icon" src="/techIcons/linked.svg" alt="linekdIn Link" />
    </a>
    <a href={LINK_GITHUB} target="_blank" rel="noreferrer noopener">
      <img class="icon" src="/techIcons/github.svg" alt="github link" />
    </a>
    <a href="/contact">
      <img class="icon" src="/techIcons/mail.svg" alt="email link" />
    </a>
  </div>
</Layout>

<style lang="scss">
  @import "../styles/vars.scss";

  .content {
    margin-top: 10rem;
    margin-inline: 8rem 14rem;
    transition: $transitionMedium;
    @media (max-width: $midScreen) {
      margin-inline: 6rem 8rem;
    }
    @media (max-width: $smallScreen) {
      margin-top: 4rem;
      margin-inline: 1rem;
    }
    .heading {
      font-size: 4rem;
      font-weight: 800;
      color: $secondaryColor;
      position: relative;
      transition: $transitionMedium;
      @media (max-width: $midScreen) {
        font-size: 2.5rem;
      }
      @media (max-width: $smallScreen) {
        font-size: 2rem;
        text-align: center;
      }
      @media (min-width: $smallScreen) {
        &::before {
          content: "";
          position: absolute;
          top: -2rem;
          left: -0.65rem;
          width: 3rem;
          height: 3rem;
          background: url("/appIcons/monke.svg");
          background-size: contain;
          @media (min-width: $midScreen) {
            top: -1.9rem;
          }
        }
      }
    }
    .desc {
      font-size: 1.3rem;
      font-weight: 600;
      color: $primaryColor;
      padding-block: 2rem;
      transition: $transitionMedium;
      @media (max-width: $midScreen) {
        font-size: 1.1rem;
        padding-block: 1rem;
      }
      @media (max-width: $smallScreen) {
        margin-inline: 2rem;
      }
    }
    .findout {
      text-align: end;
    }
  }
  .socialBar {
    position: absolute;
    bottom: 1rem;
    right: 10rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: white;
    transition: $transitionMedium;
    @media (max-width: $smallScreen) {
      right: 50%;
      transform: translateX(50%);
      background-color: $socialBarColor;
      border-radius: 10px;
      padding: 0.4rem 1rem;
    }
    a {
      width: 2.5rem;
      height: 2.5rem;
      @media (min-width: $midScreen) {
        width: 3rem;
        height: 3rem;
      }
    }
    .icon {
      height: 100%;
    }
  }
</style>
