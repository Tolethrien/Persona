---
interface Props {
  pageName: string;
}
import NavBar from "../components/navBar.astro";
import "../styles/globalStyle.astro";
import "@fontsource/roboto";
const { pageName } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageName}</title>
  </head>
  <body>
    <NavBar />
    <slot />
  </body>
  <style>
    body {
      background: linear-gradient(109.61deg, #0a192f 0%, #0d1521 100.87%);
      height: 100svh;
      margin-inline: auto;
      max-width: 1800px;
      overflow-x: hidden;
    }
  </style>
</html>
