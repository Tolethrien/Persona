---
import Category from "./category.astro";
import Description from "./description.astro";
---

<section class="mainSection">
  <Category />
  <div class="content">
    <img class="border" alt="" src="/roundMain.svg" />
    <h2>Ready Projects</h2>
    <Description class="descDesktop" />
    <slot />
  </div>
  <button class="goBack"><div class="triangle"></div>Go Back</button>

  <style lang="scss">
    @import "../styles/vars";

    .mainSection {
      display: flex;
      gap: 2rem;
      flex-grow: 1;
      position: relative;
      @media (max-width: $smallScreen) {
        flex-flow: row-reverse;
        gap: 0;
      }
      .goBack {
        $triangleSize: 0.6rem;
        color: $secondaryColor;
        position: absolute;
        bottom: 0.5rem;
        right: 1.5rem;
        background: none;
        border: none;
        .triangle {
          margin-inline: auto;
          width: 0;
          height: 0;
          border-style: solid;
          border-width: 0 $triangleSize calc($triangleSize + 0.3rem)
            $triangleSize;
          border-color: transparent transparent $secondaryColor transparent;
        }
        @media (min-width: $smallScreen) {
          display: none;
        }
      }
      .content {
        position: relative;
        flex-grow: 1;
        padding: 1rem;
        @media (min-width: $smallScreen) {
          &::after {
            content: "";
            width: 3rem;
            height: 3rem;
            position: absolute;
            top: -2.7rem;
            left: 0;
            background-image: url("/monke.svg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: contain;
            filter: brightness(70%);
          }
          margin-top: 4rem;
        }
        .border {
          position: absolute;
          left: 0;
          top: 0;
          width: 50rem;
          pointer-events: none;
          @media (max-width: $smallScreen) {
            width: 40rem;
          }
        }
        h2 {
          color: $secondaryColor;
          font-size: 2.2rem;
          font-weight: 600;
          @media (max-width: $smallScreen) {
            font-size: 1.8rem;
            text-align: center;
          }
        }
      }
      .descDesktop {
        @media (max-width: $smallScreen) {
          display: none;
        }
      }
    }
  </style>
</section>
