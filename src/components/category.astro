---
import Searchbox from "./searchbox.astro";
---

<div class="category">
  <div class="searchboxWrap">
    <Searchbox />
  </div>
  <div class="categoryButtons">
    <button><p>Production</p></button>
    <button><p>Development</p></button>
  </div>
</div>
<style lang="scss">
  @import "../styles/vars";

  .category {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5rem;
    margin-inline: 1rem;
    .searchboxWrap {
      @media (max-width: $smallScreen) {
        display: none;
      }
    }
    .categoryButtons {
      display: flex;
      flex-direction: column;
      gap: 1rem;

      @media (max-width: $smallScreen) {
        margin-block: 3rem;
      }
    }
    button {
      background: none;
      border: none;
      font-size: 2.2rem;
      font-weight: 600;
      width: fit-content;
      // margin-block: 2rem;
      color: hsla(226, 19%, 60%, 1);
      cursor: pointer;
      p {
        transition: 0.5s;
        @media (max-width: $smallScreen) {
          writing-mode: vertical-rl;
          text-orientation: upright;
          font-size: 1rem;
        }
        @media (max-width: $midScreen) and (min-width: $smallScreen) {
          font-size: 1.5rem;
        }
      }
    }
  }
</style>
